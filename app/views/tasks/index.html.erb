<h1>All tasks list:</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task_path(task.id) do%>
        <%= task.title %>----<%= task.completed %></li>
      <% end %>

      <%= link_to "Delete",
      task_path(task),
      method: :delete,
      data: { confirm: "ARU YOU SURE?"}  %>
      </li>
  <% end %>
</ul>

<%= link_to "+ Add New Task", new_task_path %>
